<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Blint" parent="Base.Theme.Blint">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="android:statusBarColor">@color/grey_3</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Blint.TextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopEnd">2dp</item>
        <item name="boxCornerRadiusTopStart">2dp</item>
    </style>

    <style name="Theme.Blint.Button.IconOnly" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Base.Theme.Blint" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

    </style>

    <style name="SplashTheme" parent="Base.Theme.Blint">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.Blint.Fab.Child" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">mini</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="tint">@android:color/white</item>
    </style>
    </resources>