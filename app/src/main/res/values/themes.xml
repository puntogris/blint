<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Blint" parent="Base.Theme.Blint">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
        <item name="colorSurface">@color/grey_5</item>
        <item name="android:statusBarColor">@color/grey_5</item>
        <item name="android:windowBackground">@color/grey_5</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="shapeAppearanceLargeComponent">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="Theme.Blint.BottomAppBar" parent="@style/Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="backgroundTint">@color/grey_20</item>
    </style>

    <style name="Theme.Blint.Calendar">
        <item name="compactCalendarBackgroundColor">@color/grey_5</item>
        <item name="compactCalendarCurrentDayBackgroundColor">@color/purple_200</item>
        <item name="compactCalendarCurrentSelectedDayBackgroundColor">#E57373</item>
        <item name="compactCalendarMultiEventIndicatorColor">#fff</item>
        <item name="compactCalendarTextColor">#121212</item>
    </style>

    <style name="Theme.Blint.Toolbar" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.Blint.Button.IconOnly" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/primaryColor</item>
    </style>

    <style name="Theme.Blint.TextButton" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="fontFamily">@font/avenir_medium</item>
    </style>

<!--    chart-->
    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Button">
    </style>

    <style name="Theme.Blint.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">2dp</item>
        <item name="boxCornerRadiusTopStart">2dp</item>
    </style>

    <style name="Theme.Blint.RoundButtonShapeOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Base.Theme.Blint" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>

    <style name="Theme.Blint.ImageButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="tint">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SplashTheme" parent="Base.Theme.Blint">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


    <style name="Theme.Blint.DataTextView" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/avenir_medium</item>
    </style>

    <style name="Theme.Blint.CalendarSeparator" >
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="Theme.Blint.DataSubTitleTextView" parent="@style/TextAppearance.AppCompat.Small" >
        <item name="fontFamily">@font/avenir_medium</item>
    </style>

    <style name="Theme.Blint.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/grey_10</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>
</resources>