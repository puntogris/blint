<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Blint" parent="Base.Theme.Blint">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
        <item name="colorSurface">@color/grey_5</item>
        <item name="android:statusBarColor">@color/grey_5</item>
        <item name="android:windowBackground">@color/grey_5</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="shapeAppearanceLargeComponent">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="Theme.Blint.Toolbar" parent="ThemeOverlay.AppCompat.Light"/>


<!--    chart-->
    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Button">
    </style>

    <style name="Theme.Blint.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">2dp</item>
        <item name="boxCornerRadiusTopStart">2dp</item>
    </style>

    <style name="Base.Theme.Blint" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>

    <style name="Theme.Blint.ImageButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/purple_200</item>
        <item name="tint">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SplashTheme" parent="Base.Theme.Blint">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.Blint.Fab.Child" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">mini</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="tint">@android:color/white</item>
    </style>

    <style name="Theme.Blint.DataTextView" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Blint.DataSubTitleTextView" parent="@style/TextAppearance.AppCompat.Small" >
    </style>

    <style name="Theme.Blint.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/grey_10</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>
</resources>