<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="fragment"
            type="com.puntogris.blint.ui.product.manage.ManageProductsFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        tools:context=".ui.product.manage.ManageProductsFragment"
        android:animateLayoutChanges="true">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:paddingLeft="@dimen/grid_1"
            android:paddingRight="@dimen/grid_1"
            style="@style/Theme.Blint.CustomToolbar"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/productSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/search"
                    android:imeOptions="flagNoExtractUi|actionSearch"
                    android:inputType="textNoSuggestions"
                    android:autofillHints="@string/auto_fill_hint_search_product" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/actionBarItemBackground"
                    android:padding="16dp"
                    app:srcCompat="@drawable/ic_baseline_more_vert_24"
                    android:contentDescription="@string/more_image" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <com.puntogris.blint.ui.custom_views.ConstraintRadioGroup
            android:id="@+id/searchTypeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent">

            <RadioButton
                android:id="@+id/nameSearchType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/name"
                app:layout_constraintEnd_toStartOf="@+id/internalCodeSearchType"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp" />

            <RadioButton
                android:id="@+id/internalCodeSearchType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sku"
                app:layout_constraintEnd_toStartOf="@+id/qrSearchType"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/nameSearchType"
                tools:layout_editor_absoluteY="0dp" />

            <RadioButton
                android:id="@+id/qrSearchType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qr"
                android:onClick="@{()-> fragment.onScanBarcodeClicked()}"
                app:layout_constraintEnd_toStartOf="@+id/categorySearchType"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/internalCodeSearchType"
                tools:layout_editor_absoluteY="0dp" />

            <RadioButton
                android:id="@+id/categorySearchType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:onClick="@{()-> fragment.onCategoryClicked()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/qrSearchType"
                tools:layout_editor_absoluteY="0dp" />

        </com.puntogris.blint.ui.custom_views.ConstraintRadioGroup>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutAnimation="@anim/layout_anim_slide_up"
                android:clipToPadding="false"
                android:paddingBottom="88dp"
                android:scrollbars="vertical" />
    </LinearLayout>
</layout>