<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="notification"
            type="com.puntogris.blint.model.Notification" />
    </data>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_marginHorizontal="18dp"
                android:layout_marginVertical="4dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:gravity="end"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    style="@style/Theme.Blint.DataTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="75"
                    android:visibility="visible"
                    notificationTypeTitle="@{notification}"
                    android:textColor="@color/primaryColor"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_weight="25"
                    android:textAlignment="textEnd"
                    style="@style/Theme.Blint.DataSubTitleTextView"
                    timeSinceCreated="@{notification.timestamp}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                notificationTypeMessage="@{notification}" />

            <ImageView
                android:id="@+id/image"
                notificationImage="@{notification.imageUri}"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="visible"
                android:contentDescription="@string/image" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

</layout>