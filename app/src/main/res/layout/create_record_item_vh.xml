<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.puntogris.blint.model.ProductWithRecord" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:foreground="?selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scale_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/list_item_horizontal_padding"
                android:paddingTop="16dp"
                android:paddingRight="@dimen/list_item_horizontal_padding"
                android:paddingBottom="16dp"
                android:transformPivotX="0dp">

                <ImageView
                    android:id="@+id/chevron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/expand_image" />

                <TextView
                    android:id="@+id/textView156"
                    style="@style/Theme.Blint.DataTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_toEndOf="@+id/chevron"
                    capitalizeFirstChar="@{item.product.name}"
                    app:layout_constraintBottom_toBottomOf="@+id/chevron"
                    app:layout_constraintEnd_toStartOf="@+id/recordAmount"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@+id/chevron"
                    app:layout_constraintTop_toTopOf="@+id/chevron" />

                <TextView
                    android:id="@+id/recordAmount"
                    style="@style/Theme.Blint.DataTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textView156"
                    android:text="@{String.valueOf(item.record.amount)}"
                    app:layout_constraintBottom_toBottomOf="@+id/chevron"
                    app:layout_constraintEnd_toStartOf="@+id/textView13516"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textView156"
                    app:layout_constraintTop_toTopOf="@+id/chevron" />

                <TextView
                    android:id="@+id/textView13516"
                    style="@style/Theme.Blint.DataTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_toEndOf="@+id/recordAmount"
                    app:layout_constraintBottom_toBottomOf="@+id/chevron"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/recordAmount"
                    app:layout_constraintTop_toTopOf="@+id/chevron" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/expand_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/chevron"
                    tools:layout_editor_absoluteX="16dp"
                    tools:visibility="visible">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/amountTextInput"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="151dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/amount"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/amountText"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:text="@{String.valueOf(item.record.amount)}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textField2"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="151dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/amountTextInput">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/recordPriceText"
                            android:inputType="numberDecimal"
                            android:imeOptions="actionDone"
                            android:text="@{String.valueOf(item.record.productUnitPrice)}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/discountTextInput"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:hint="@string/discount"
                        app:layout_constraintEnd_toStartOf="@+id/discountType"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textField2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:inputType="number"
                            android:imeOptions="actionDone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/discountType"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/type"
                        app:expandedHintEnabled="false"
                        app:layout_constraintBottom_toBottomOf="@+id/discountTextInput"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/discountTextInput"
                        app:layout_constraintTop_toTopOf="@+id/discountTextInput">

                        <AutoCompleteTextView
                            android:id="@+id/changeValueTypeText"
                            android:layout_width="match_parent"
                            android:text="@string/percentage_symbol"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/textView618"
                        style="@style/Theme.Blint.DataSubTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prices"
                        app:layout_constraintBottom_toTopOf="@+id/textView6118"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView152"
                        app:layout_constraintTop_toTopOf="@+id/textField2"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/textView6118"
                        style="@style/Theme.Blint.DataTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(item.product.buyPrice)}"
                        app:layout_constraintBottom_toBottomOf="@+id/textField2"
                        app:layout_constraintStart_toStartOf="@+id/textView618"
                        app:layout_constraintTop_toBottomOf="@+id/textView618" />

                    <TextView
                        android:id="@+id/textView152"
                        style="@style/Theme.Blint.DataSubTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stock"
                        app:layout_constraintBottom_toTopOf="@+id/textView153"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/amountTextInput"
                        app:layout_constraintTop_toTopOf="@+id/amountTextInput"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/textView153"
                        style="@style/Theme.Blint.DataTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(item.product.amount)}"
                        app:layout_constraintBottom_toBottomOf="@+id/amountTextInput"
                        app:layout_constraintStart_toStartOf="@+id/textView152"
                        app:layout_constraintTop_toBottomOf="@+id/textView152" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</layout>