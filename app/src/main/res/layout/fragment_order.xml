<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.puntogris.blint.feature_store.presentation.orders.details.OrdersViewModel" />

        <variable
            name="fragment"
            type="com.puntogris.blint.feature_store.presentation.orders.details.OrderFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature_store.presentation.orders.details.OrderFragment">

        <View
            android:id="@+id/divider29"
            style="@style/Theme.Blint.Divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chip" />

        <TextView
            android:id="@+id/orderDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:ems="6"
            android:text="@string/date"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orderType" />

        <TextView
            android:id="@+id/orderDate"
            dateFromTimestampWithTime="@{viewModel.orderWithRecords.order.timestamp}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/orderDateLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/orderDateLabel"
            app:layout_constraintTop_toTopOf="@+id/orderDateLabel" />

        <TextView
            android:id="@+id/orderTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:ems="6"
            android:text="@string/type"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/orderType"
            recordTypeString="@{viewModel.orderWithRecords.order.type}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/orderTypeLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/orderTypeLabel"
            app:layout_constraintTop_toTopOf="@+id/orderTypeLabel" />

        <TextView
            android:id="@+id/orderValueLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="6"
            android:text="@string/total"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/orderDateLabel"
            app:layout_constraintTop_toBottomOf="@+id/orderDate" />


        <TextView
            android:id="@+id/externalNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:text="@string/trader_label"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/chip"
            app:layout_constraintStart_toStartOf="@+id/orderValueLabel"
            app:layout_constraintTop_toTopOf="@+id/chip" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip"
            externalChipName="@{viewModel.orderWithRecords.order.traderName}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="@{()->fragment.onExternalChipClicked()}"
            app:layout_constraintStart_toEndOf="@+id/externalNameTitle"
            app:layout_constraintTop_toBottomOf="@+id/orderValueLabel" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/generateInvoiceButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider29" />

        <TextView
            android:id="@+id/orderTotal"
            totalOrderWithDetails="@{viewModel.orderWithRecords}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/orderValueLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/orderValueLabel"
            app:layout_constraintTop_toTopOf="@+id/orderValueLabel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/generateInvoiceButton"
            style="@style/Theme.Blint.Button"
            android:layout_width="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="24dp"
            android:onClick="@{()->fragment.onGenerateOrderReceiptClicked()}"
            android:text="@string/generate_receipt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>