<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="record"
            type="com.puntogris.blint.feature_store.domain.model.order.Record" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <View
            android:id="@+id/product_records_vh_record_type_icon"
            recordType="@{record.type}"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/divider_round_corners_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/product_records_vh_record_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/product_records_vh_record_type_sign" />

        <TextView
            android:id="@+id/product_records_vh_product_name"
            style="?attr/textAppearanceSubtitle1"
            capitalizeFirstChar="@{record.productName}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:singleLine="true"
            app:layout_constraintEnd_toStartOf="@+id/product_records_vh_record_type_sign"
            app:layout_constraintStart_toEndOf="@+id/product_records_vh_record_type_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/product_records_vh_record_date"
            dateFromTimestamp="@{record.timestamp}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/product_records_vh_product_name"
            app:layout_constraintTop_toBottomOf="@id/product_records_vh_product_name"
            tools:text="10/12/2021" />

        <TextView
            android:id="@+id/product_records_vh_product_stock"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@{String.valueOf(record.amount)}"
            app:layout_constraintBottom_toBottomOf="@id/product_records_vh_record_date"
            app:layout_constraintEnd_toStartOf="@id/product_records_vh_product_stock_label"
            app:layout_constraintTop_toTopOf="@id/product_records_vh_product_name"
            tools:text="1200.00" />

        <TextView
            android:id="@+id/product_records_vh_product_stock_label"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/stock"
            app:layout_constraintBottom_toBottomOf="@id/product_records_vh_product_stock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/product_records_vh_product_stock" />

        <TextView
            android:id="@+id/product_records_vh_record_type_sign"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            amountSymbolWithRecordType="@{record.type}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plus_symbol"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/product_records_vh_divider"
            style="@style/Theme.Blint.Divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>