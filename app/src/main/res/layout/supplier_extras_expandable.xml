<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.puntogris.blint.ui.supplier.SupplierViewModel" />
        <variable
            name="fragment"
            type="com.puntogris.blint.ui.supplier.SupplierDataFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.puntogris.blint.ui.custom_views.CustomButtonIconArrows
            android:id="@+id/supplierExtrasButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="24dp"
            android:text="Extras"
            android:onClick="@{()-> fragment.onExtraButtonClicked()}"
            android:textAlignment="viewStart"
            app:iconGravity="end"
            app:startOpen="false" />

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="300"
            app:el_expanded="false"
            app:el_parallax="0.5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/supplierPaymentInfo"
                    style="@style/Theme.Blint.TextInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:hint="Informacion de pagos"
                    app:layout_constraintEnd_toStartOf="@+id/scanBarcodeButton"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/supplierPaymentInfoText"
                        android:text="@{viewModel.currentSupplier.companyPaymentInfo}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/scanBarcodeButton"
                    style="@style/Theme.Blint.ImageButton"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/supplierPaymentInfo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/supplierPaymentInfo"
                    app:layout_constraintTop_toTopOf="@+id/supplierPaymentInfo"
                    app:srcCompat="@drawable/ic_baseline_content_copy_24" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/supplierNotes"
                    style="@style/Theme.Blint.TextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:hint="Notas"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/supplierPaymentInfo">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/supplierNotesText"
                        android:text="@{viewModel.currentSupplier.notes}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>
        <View
            android:id="@+id/divider9"
            android:layout_width="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginBottom="?actionBarSize"
            android:background="?android:attr/listDivider" />
    </LinearLayout>
</layout>