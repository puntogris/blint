<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="product"
            type="com.puntogris.blint.model.ProductWithSuppliersCategories" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        style="@style/Theme.Blint.CardView"

        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <View
            android:id="@+id/shareView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.puntogris.blint.ui.custom_views.line_indicator.RallyVerticalBar
            android:id="@+id/bar"
            android:layout_width="4dp"
            android:layout_height="0dp"
            verticalIndicatorProgress="@{product.product.amount}"
            app:layout_constraintTop_toTopOf="@id/tvName"
            app:layout_constraintBottom_toBottomOf="@id/tvUsed"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/grey_80"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="@dimen/spacing_medium"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Coffee Shops"
            android:text="@{product.product.name}"
            android:layout_marginTop="@dimen/spacing_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/bar"
            app:layout_constraintEnd_toStartOf="@id/tvLeft"
            android:layout_marginStart="@dimen/spacing_medium"
            style="?attr/textAppearanceSubtitle1"/>

        <TextView
            android:id="@+id/tvUsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$45.49"
            android:letterSpacing="0.2"
            productPrices="@{product.product}"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/bar"
            android:layout_marginStart="@dimen/spacing_medium"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/text_view_dollar"
            android:text="$"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias=".55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <TextView
            android:id="@+id/tvLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1200.00"
            android:letterSpacing="0.2"
            style="?attr/textAppearanceSubtitle1"
            android:text="@{String.valueOf(product.product.amount)}"
            app:layout_constraintTop_toTopOf="@id/tvName"
            app:layout_constraintBottom_toBottomOf="@id/tvUsed"
            app:layout_constraintEnd_toStartOf="@id/ivArrow"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_small"/>

        <TextView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvLeft"
            app:layout_constraintBottom_toBottomOf="@id/tvLeft"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:text="@string/stock"
            style="@style/TextAppearance.MaterialComponents.Caption"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>