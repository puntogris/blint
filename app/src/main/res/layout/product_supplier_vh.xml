<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="supplier"
            type="com.puntogris.blint.feature_store.domain.model.CheckableSupplier" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/supplierView"
            capitalizeFirstChar="@{supplier.supplier.companyName}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_checkable_selector"
            android:drawablePadding="20dp"
            android:foreground="?selectableItemBackground"
            android:padding="12dp"
            android:textSize="17sp"
            app:drawableStartCompat="@drawable/ic_outline_local_shipping_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>
</layout>