<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.puntogris.blint.feature_store.presentation.trader.create_edit.EditTraderViewModel" />

        <variable
            name="fragment"
            type="com.puntogris.blint.feature_store.presentation.trader.create_edit.EditTraderFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/edit_trader_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:ems="5"
            android:text="@string/name"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/edit_trader_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edit_trader_name" />


        <EditText
            android:id="@+id/edit_trader_name"
            capitalizeWord="@{viewModel.currentTrader.name}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:afterTextChanged="@{viewModel::updateTraderName}"
            android:background="@null"
            android:ems="10"
            android:hint="@string/enter_name_hint"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/edit_trader_contact_button"
            app:layout_constraintStart_toEndOf="@+id/edit_trader_name_label"
            app:layout_constraintTop_toTopOf="parent"
            android:importantForAutofill="no" />

        <ImageView
            android:id="@+id/edit_trader_contact_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="@string/open_contact_image"
            android:onClick="@{()-> fragment.onAddClientFromContactsClicked()}"
            app:layout_constraintBottom_toBottomOf="@+id/edit_trader_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edit_trader_name"
            app:layout_constraintVertical_bias="0.476"
            app:srcCompat="@drawable/ic_fi_rr_user_add" />

        <View
            android:id="@+id/edit_trader_divider1"
            style="@style/Theme.Blint.Divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_trader_name" />

        <TextView
            android:id="@+id/edit_trader_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="@string/phone"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/edit_trader_phone"
            app:layout_constraintStart_toStartOf="@+id/edit_trader_name_label"
            app:layout_constraintTop_toTopOf="@+id/edit_trader_phone" />

        <EditText
            android:id="@+id/edit_trader_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:afterTextChanged="@{viewModel::updateTraderPhone}"
            android:background="@null"
            android:ems="10"
            android:hint="@string/enter_phone_hint"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:text="@{viewModel.currentTrader.phone}"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_trader_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/edit_trader_phone_label"
            app:layout_constraintTop_toBottomOf="@+id/edit_trader_divider1"
            android:importantForAutofill="no"
            android:inputType="phone" />

        <View
            android:id="@+id/edit_trader_divider2"
            style="@style/Theme.Blint.Divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_trader_phone" />

        <TextView
            android:id="@+id/edit_trader_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="@string/e_mail"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/edit_trader_email"
            app:layout_constraintStart_toStartOf="@+id/edit_trader_phone_label"
            app:layout_constraintTop_toTopOf="@+id/edit_trader_email" />

        <EditText
            android:id="@+id/edit_trader_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:afterTextChanged="@{viewModel::updateTraderEmail}"
            android:background="@null"
            android:ems="10"
            android:hint="@string/enter_email_hint"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:text="@{viewModel.currentTrader.email}"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_trader_phone"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/edit_trader_email_label"
            app:layout_constraintTop_toBottomOf="@+id/edit_trader_divider2"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress" />

        <View
            android:id="@+id/edit_trader_divider3"
            style="@style/Theme.Blint.Divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_trader_email" />

        <TextView
            android:id="@+id/edit_trader_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="@string/address"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/edit_trader_address"
            app:layout_constraintStart_toStartOf="@+id/edit_trader_email_label"
            app:layout_constraintTop_toTopOf="@+id/edit_trader_address" />

        <EditText
            android:id="@+id/edit_trader_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:afterTextChanged="@{viewModel::updateTraderAddress}"
            android:background="@null"
            android:ems="10"
            android:hint="@string/enter_address_hint"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:text="@{viewModel.currentTrader.address}"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_trader_email"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/edit_trader_address_label"
            app:layout_constraintTop_toBottomOf="@+id/edit_trader_divider3"
            android:importantForAutofill="no" />

        <View
            android:id="@+id/edit_trader_divider4"
            style="@style/Theme.Blint.Divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_trader_address" />

        <TextView
            android:id="@+id/edit_trader_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="5"
            android:text="@string/type"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/edit_trader_address_label"
            app:layout_constraintTop_toBottomOf="@+id/edit_trader_divider4" />

        <TextView
            android:id="@+id/edit_trader_type_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/choose_type_hint"
            android:textColor="?android:textColorHint"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_trader_address"
            app:layout_constraintStart_toEndOf="@+id/edit_trader_type_label"
            app:layout_constraintTop_toTopOf="@+id/edit_trader_type_label" />

        <RadioGroup
            android:id="@+id/edit_trader_type_radio_group"
            selectedTraderType="@{viewModel.currentTrader.type}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_trader_type_hint">

            <RadioButton
                android:id="@+id/other_trader_type_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trader_type_other" />

            <RadioButton
                android:id="@+id/client_trader_type_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="@string/trader_type_client" />

            <RadioButton
                android:id="@+id/supplier_trader_type_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trader_type_supplier" />
        </RadioGroup>

        <View
            android:id="@+id/edit_trader_divider5"
            style="@style/Theme.Blint.Divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_trader_type_radio_group" />

        <TextView
            android:id="@+id/edit_trader_billing_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:ems="5"
            android:text="@string/billing"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/edit_trader_billing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edit_trader_billing" />

        <EditText
            android:id="@+id/edit_trader_billing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:afterTextChanged="@{viewModel::updateTraderPaymentInfo}"
            android:background="@null"
            android:ems="10"
            android:hint="@string/enter_billing_hint"
            android:inputType="textPersonName"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_trader_address"
            app:layout_constraintStart_toEndOf="@+id/edit_trader_billing_label"
            app:layout_constraintTop_toBottomOf="@+id/edit_trader_divider5"
            android:importantForAutofill="no" />

        <View
            android:id="@+id/edit_trader_divider6"
            style="@style/Theme.Blint.Divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_trader_billing" />

        <TextView
            android:id="@+id/edit_trader_notes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="@string/notes"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/edit_trader_notes"
            app:layout_constraintStart_toStartOf="@+id/edit_trader_billing_label"
            app:layout_constraintTop_toTopOf="@+id/edit_trader_notes" />

        <EditText
            android:id="@+id/edit_trader_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:afterTextChanged="@{viewModel::updateTraderNotes}"
            android:background="@null"
            android:ems="10"
            android:hint="@string/enter_notes_hint"
            android:inputType="textPersonName"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edit_trader_billing"
            app:layout_constraintStart_toEndOf="@+id/edit_trader_notes_label"
            app:layout_constraintTop_toBottomOf="@+id/edit_trader_divider6"
            android:importantForAutofill="no" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
