<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="order"
            type="com.puntogris.blint.feature_store.domain.model.order.OrderWithRecords" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <View
            android:id="@+id/order_vh_type_icon"
            recordType="@{order.order.type}"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/divider_round_corners_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/order_vh_order_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/order_vh_order_number" />

        <TextView
            android:id="@+id/order_vh_order_number"
            style="?attr/textAppearanceSubtitle1"
            orderNumberTitle="@{order.order.number}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            app:layout_constraintEnd_toStartOf="@+id/order_vh_order_type_sign"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/order_vh_type_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_vh_order_date"
            dateFromTimestamp="@{order.order.timestamp}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/order_vh_type_icon"
            app:layout_constraintTop_toBottomOf="@id/order_vh_order_number"
            tools:text="10-05" />

        <TextView
            android:id="@+id/order_vh_order_total"
            style="?attr/textAppearanceSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="@{String.valueOf(order.order.total)}"
            app:layout_constraintBottom_toBottomOf="@id/order_vh_order_date"
            app:layout_constraintEnd_toStartOf="@id/order_vh_order_total_label"
            app:layout_constraintTop_toTopOf="@id/order_vh_order_number"
            tools:text="1200.00" />

        <TextView
            android:id="@+id/order_vh_order_total_label"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/dollar_symbol"
            app:layout_constraintBottom_toBottomOf="@id/order_vh_order_total"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/order_vh_order_total" />

        <TextView
            android:id="@+id/order_vh_order_type_sign"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            amountSymbolWithRecordType="@{order.order.type}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plus_symbol"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/order_vh_divider"
            style="@style/Theme.Blint.Divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>