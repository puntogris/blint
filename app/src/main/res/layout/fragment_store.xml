<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="business"
            type="com.puntogris.blint.feature_store.domain.model.Store" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature_store.presentation.store.StoreFragment">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/store_toolbar"
            style="@style/Theme.Blint.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/menu_store"
            app:navigationIcon="@drawable/ic_fi_rr_angle_left"
            app:title="@string/my_store_label" />

        <TextView
            android:id="@+id/store_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/details"
            android:textColor="@color/color_on_background"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/store_toolbar" />

        <TextView
            android:id="@+id/store_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/name"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/store_details_title" />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{business.name}"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/store_name_label"
            app:layout_constraintTop_toBottomOf="@+id/store_name_label" />

        <TextView
            android:id="@+id/store_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/creation_date"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/store_name"
            app:layout_constraintTop_toBottomOf="@+id/store_name" />

        <TextView
            android:id="@+id/store_date"
            dateFromTimestamp="@{business.createdAt}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/store_date_label"
            app:layout_constraintTop_toBottomOf="@+id/store_date_label" />

        <TextView
            android:id="@+id/store_author_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/author"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/store_date"
            app:layout_constraintTop_toBottomOf="@+id/store_date" />

        <TextView
            android:id="@+id/store_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{business.author}"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/store_author_label"
            app:layout_constraintTop_toBottomOf="@+id/store_author_label" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>