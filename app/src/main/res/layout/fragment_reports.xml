<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.puntogris.blint.feature_store.presentation.reports.ReportsFragment" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="24dp"
            android:orientation="vertical"
            tools:context=".feature_store.presentation.reports.ReportsFragment">

            <TextView
                android:id="@+id/generateReportTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/generate_reports"
                android:textColor="@color/color_on_background"
                android:textSize="17sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/recordsReport"
                style="@style/Theme.Blint.Button"
                android:layout_width="match_parent"
                android:onClick="@{()->fragment.onProductsReportClicked()}"
                android:text="@string/product_records_report" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/tradersRecordsReport"
                style="@style/Theme.Blint.Button"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:onClick="@{()->fragment.onClientsReportClicked()}"
                android:text="@string/traders_records_report" />

            <TextView
                android:id="@+id/generateListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/generate_lists"
                android:textColor="@color/color_on_background"
                android:textSize="17sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/productsReport"
                style="@style/Theme.Blint.Button"
                android:layout_width="match_parent"
                android:onClick="@{()->fragment.onProductListClicked()}"
                android:text="@string/products_label" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tradersReport"
                style="@style/Theme.Blint.Button"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:onClick="@{()->fragment.onClientListClicked()}"
                android:text="@string/traders_label"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>