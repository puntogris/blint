<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature_store.presentation.reports.ReportsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Theme.Blint.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_fi_rr_angle_left"
        app:title="@string/reports_label" />

    <TextView
        android:id="@+id/textView_reports_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_6"
        android:layout_marginTop="@dimen/spacing_4"
        android:layout_marginBottom="@dimen/spacing_4"
        android:fontFamily="sans-serif-medium"
        android:text="@string/generate_reports"
        android:textColor="@color/color_on_background"
        android:textSize="@dimen/text_lg" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_products_records"
        style="@style/Theme.Blint.Button"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/spacing_6"
        android:text="@string/product_records_report" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_traders_records"
        style="@style/Theme.Blint.Button"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/spacing_6"
        android:layout_marginTop="@dimen/spacing_4"
        android:text="@string/traders_records_report" />

    <TextView
        android:id="@+id/textView_report_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_6"
        android:layout_marginTop="@dimen/spacing_4"
        android:layout_marginBottom="@dimen/spacing_4"
        android:fontFamily="sans-serif-medium"
        android:text="@string/generate_lists"
        android:textColor="@color/color_on_background"
        android:textSize="@dimen/text_lg" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_products_list"
        style="@style/Theme.Blint.Button"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/spacing_6"
        android:text="@string/products_label" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_trader_list"
        style="@style/Theme.Blint.Button"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/spacing_6"
        android:layout_marginTop="@dimen/spacing_4"
        android:text="@string/traders_label" />

</LinearLayout>