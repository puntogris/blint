<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.puntogris.blint.feature_store.presentation.product.create_edit.EditProductFragment" />

        <variable
            name="viewModel"
            type="com.puntogris.blint.feature_store.presentation.product.create_edit.EditProductViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_extras_card_product_sku_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:ems="4"
            android:text="@string/sku"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/product_extras_card_product_sku"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/product_extras_card_product_sku" />


        <EditText
            android:id="@+id/product_extras_card_product_sku"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:afterTextChanged="@{viewModel::updateProductSku}"
            android:background="@null"
            android:ems="10"
            android:hint="@string/enter_sku_hint"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:text="@{viewModel.currentProduct.product.sku}"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/product_extras_card_product_sku_label"
            app:layout_constraintTop_toTopOf="parent"
            android:importantForAutofill="no" />

        <View
            android:id="@+id/product_extras_card_divider1"
            style="@style/Theme.Blint.Divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_extras_card_product_sku" />

        <TextView
            android:id="@+id/product_extras_card_product_brand_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:text="@string/brand"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/product_extras_card_product_brand"
            app:layout_constraintStart_toStartOf="@+id/product_extras_card_product_sku_label"
            app:layout_constraintTop_toTopOf="@+id/product_extras_card_product_brand" />

        <EditText
            android:id="@+id/product_extras_card_product_brand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:afterTextChanged="@{viewModel::updateProductBrand}"
            android:background="@null"
            android:ems="10"
            android:hint="@string/enter_brand_hint"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:text="@{viewModel.currentProduct.product.brand}"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/product_extras_card_product_brand_label"
            app:layout_constraintTop_toBottomOf="@+id/product_extras_card_divider1"
            android:importantForAutofill="no" />

        <View
            android:id="@+id/product_extras_card_divider2"
            style="@style/Theme.Blint.Divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_extras_card_product_brand" />

        <TextView
            android:id="@+id/product_extras_card_product_notes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:text="@string/notes"
            android:textColor="@color/color_on_background"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/product_extras_card_product_notes"
            app:layout_constraintStart_toStartOf="@+id/product_extras_card_product_brand_label"
            app:layout_constraintTop_toTopOf="@+id/product_extras_card_product_notes" />

        <EditText
            android:id="@+id/product_extras_card_product_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:afterTextChanged="@{viewModel::updateProductSize}"
            android:background="@null"
            android:ems="10"
            android:hint="@string/enter_notes_hint"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:text="@{viewModel.currentProduct.product.notes}"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/product_extras_card_product_notes_label"
            app:layout_constraintTop_toBottomOf="@+id/product_extras_card_divider2"
            android:importantForAutofill="no" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>