<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.operations.GeneralPriceChangeFragment">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/productsAffected"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="50dp"
            android:hint="Grupo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView88">

            <AutoCompleteTextView
                android:id="@+id/productsAffectedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>


        <CheckBox
            android:id="@+id/buyPriceCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Compra"
            app:layout_constraintBottom_toBottomOf="@+id/sellPriceCheckBox"
            app:layout_constraintEnd_toStartOf="@+id/sellPriceCheckBox"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sellPriceCheckBox" />

        <CheckBox
            android:id="@+id/sellPriceCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:checked="true"
            android:text="Venta"
            app:layout_constraintEnd_toStartOf="@+id/suggestedPriceCheckBox"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buyPriceCheckBox"
            app:layout_constraintTop_toBottomOf="@+id/textView87" />

        <CheckBox
            android:id="@+id/suggestedPriceCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Sugerido"
            app:layout_constraintBottom_toBottomOf="@+id/sellPriceCheckBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/sellPriceCheckBox"
            app:layout_constraintTop_toTopOf="@+id/sellPriceCheckBox" />

        <TextView
            android:id="@+id/textView86"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Precios afectados"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amountTypeRadioGroup" />

        <TextView
            android:id="@+id/textView87"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:text="Selecciona los campos de los productos que te gustaria afectar con el nuevo cambio."
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView86" />

        <TextView
            android:id="@+id/textView88"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Productos afectados"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView89"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Valor de modificacion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productsAffectedTitle" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/changeValueType"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tipo"
            app:expandedHintEnabled="false"
            app:layout_constraintBottom_toBottomOf="@+id/changeValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/changeValue"
            app:layout_constraintTop_toTopOf="@+id/changeValue">

            <AutoCompleteTextView
                android:id="@+id/changeValueTypeText"
                android:layout_width="match_parent"
                android:text="%"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/changeValue"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Valor"
            app:layout_constraintEnd_toStartOf="@+id/changeValueType"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView89">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/changeValueText"
                android:layout_width="match_parent"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:id="@+id/amountTypeRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/changeValue">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/increaseAmount"
                android:layout_width="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Aumento" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/decreaseAmount"
                android:layout_marginStart="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disminucion" />


        </RadioGroup>

        <TextView
            android:id="@+id/productsAffectedTitle"
            style="@style/Theme.Blint.DataSubTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/productsAffected"
            app:layout_constraintTop_toBottomOf="@+id/productsAffected" />

        <TextView
            android:id="@+id/productsAffectedData"
            style="@style/Theme.Blint.DataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/productsAffectedTitle"
            app:layout_constraintStart_toEndOf="@+id/productsAffectedTitle"
            app:layout_constraintTop_toTopOf="@+id/productsAffectedTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>