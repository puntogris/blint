<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        android:title="@string/my_account_pref"
        android:key="account_pref"
        app:iconSpaceReserved="true" />

    <Preference
        android:title="@string/backup_pref"
        android:key="backup_pref"
        app:iconSpaceReserved="true"
        android:fragment="com.puntogris.blint.feature_store.presentation.settings.BackupPreferences"/>

    <ListPreference
        android:title="@string/themes_pref"
        app:iconSpaceReserved="true"
        android:defaultValue="1"
        android:key="theme_pref"
        android:entries="@array/theme_names"
        android:entryValues="@array/theme_values"/>

    <PreferenceCategory
        android:title="@string/help_pref">

        <Preference
            android:title="See the F.A.Q"
            app:summary="Check out the frequently asked questions."
            android:key="help_pref"
            app:iconSpaceReserved="true" />

        <Preference
            android:title="Create a ticket"
            app:summary="Report a bug or give us feedback."
            android:key="help_pref"
            app:iconSpaceReserved="true" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="App">

        <Preference
            android:title="@string/about_us_pref"
            app:iconSpaceReserved="true"
            android:key="about_pref" />

    </PreferenceCategory>


</PreferenceScreen>