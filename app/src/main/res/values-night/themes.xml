<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Blint" parent="Base.Theme.Blint">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">#121212</item>
        <item name="android:statusBarColor">@color/nightBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="shapeAppearanceLargeComponent">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
        <item name="scrimBackground">@color/reply_black_900_alpha_087</item>
        <item name="colorPrimarySurfaceVariant">?attr/colorSurface</item>
        <item name="bottomSheetDayNight">#121212</item>
    </style>

    <style name="Theme.Blint.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/Theme.Blint.RoundButtonShapeOverlay</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Blint.ListHolderLayout" >
        <item name="android:background">#0E0E0E</item>
    </style>

    <style name="Theme.Blint.TabLayout" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/nightBackground</item>
    </style>

    <style name="Theme.Blint.CheckedTextNav" >
        <item name="android:textColor">@color/color_navigation_drawer_menu_item</item>
        <item name="drawableTint">@color/color_navigation_drawer_menu_item</item>
    </style>

    <style name="Theme.Blint.ImageView" >
        <item name="android:tint">@color/grey_20</item>
    </style>

    <style name="Theme.Blint.Notifications" parent="Base.Theme.Blint" >
        <item name="android:background" >@color/almostBlack</item>
    </style>

    <style name="Theme.Blint.CalendarSeparator">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="Theme.Blint.Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Theme.Blint.CustomToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/nightBackground</item>
    </style>

    <style name="Theme.Blint.Button.IconOnly" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/primaryColor</item>
    </style>

    <style name="Theme.Blint.TextButton" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.Blint.CardView" parent="Widget.MaterialComponents.CardView"/>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>

</resources>