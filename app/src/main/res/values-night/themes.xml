<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Blint" parent="Base.Theme.Blint">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">#121212</item>
        <item name="android:statusBarColor">@color/purple_200</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="shapeAppearanceLargeComponent">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="Theme.Blint.Calendar">
        <item name="compactCalendarBackgroundColor">#121212</item>
        <item name="compactCalendarCurrentDayBackgroundColor">@color/purple_200</item>
        <item name="compactCalendarCurrentSelectedDayBackgroundColor">#E57373</item>
        <item name="compactCalendarMultiEventIndicatorColor">#fff</item>
        <item name="compactCalendarTextColor">#fff</item>
    </style>

    <style name="Theme.Blint.CalendarSeparator">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="Theme.Blint.Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/purple_200</item>
    </style>

    <style name="Theme.Blint.Toolbar2" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.Blint.Button.IconOnly" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/primaryColor</item>
    </style>

    <style name="Theme.Blint.TextButton" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="fontFamily">@font/avenir_medium</item>
    </style>

    <style name="Theme.Blint.CardView" parent="Widget.MaterialComponents.CardView"/>

</resources>