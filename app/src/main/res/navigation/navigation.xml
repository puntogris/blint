<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/scannerFragment"
        android:name="com.puntogris.blint.feature_store.presentation.scanner.ScannerFragment"
        android:label="@string/scanner_label" >
        <argument
            android:name="originDestination"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_scannerFragment_to_scannerResultDialog"
            app:destination="@id/scannerResultDialog" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.puntogris.blint.feature_store.presentation.main.MainFragment"
        android:label="@string/app_name" >
        <action
            android:id="@+id/action_mainFragment_to_registerBusiness"
            app:destination="@id/registerBusinessFragment" />
        <action
            android:id="@+id/action_mainFragment_to_eventInfoBottomSheet"
            app:destination="@id/eventInfoBottomSheet" />
    </fragment>
    <fragment
        android:id="@+id/registerBusinessFragment"
        android:name="com.puntogris.blint.feature_store.presentation.business.register_business.RegisterBusinessFragment"
        android:label="@string/register_business_label" />
    <fragment
        android:id="@+id/preferencesFragment"
        android:name="com.puntogris.blint.feature_store.presentation.settings.PreferencesFragment"
        android:label="@string/settings_label" />
    <fragment
        android:id="@+id/clientFragment"
        android:name="com.puntogris.blint.feature_store.presentation.client.detail.ClientFragment"
        android:label="@string/client_label" >
        <argument
            android:name="client"
            app:argType="com.puntogris.blint.feature_store.domain.model.Client"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_clientFragment_to_editClientFragment"
            app:destination="@id/editClientFragment" />
        <action
            android:id="@+id/action_clientFragment_to_recordInfoBottomSheet"
            app:destination="@id/recordInfoBottomSheet" />
        <action
            android:id="@+id/action_clientFragment_to_debtStatusFragment"
            app:destination="@id/debtStatusFragment" />
        <argument
            android:name="clientId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/supplierFragment"
        android:name="com.puntogris.blint.feature_store.presentation.supplier.detail.SupplierFragment"
        android:label="@string/supplier_label" >
        <argument
            android:name="supplier"
            app:argType="com.puntogris.blint.feature_store.domain.model.Supplier"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_supplierFragment_to_editSupplierFragment"
            app:destination="@id/editSupplierFragment" />
        <action
            android:id="@+id/action_supplierFragment_to_recordInfoBottomSheet"
            app:destination="@id/recordInfoBottomSheet" />
        <action
            android:id="@+id/action_supplierFragment_to_debtStatusFragment"
            app:destination="@id/debtStatusFragment" />
        <argument
            android:name="supplierId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/manageProductsFragment"
        android:name="com.puntogris.blint.feature_store.presentation.product.manage.ManageProductsFragment">
        <action
            android:id="@+id/action_manageProductsFragment_to_productFragment"
            app:destination="@id/productFragment" />
        <action
            android:id="@+id/action_manageProductsFragment_to_scannerFragment"
            app:destination="@id/scannerFragment" />
    </fragment>
    <fragment
        android:id="@+id/manageSuppliersFragment"
        android:name="com.puntogris.blint.feature_store.presentation.supplier.manage.ManageSuppliersFragment">
        <action
            android:id="@+id/action_manageSuppliersFragment_to_supplierFragment"
            app:destination="@id/supplierFragment" />
    </fragment>
    <fragment
        android:id="@+id/manageClientsFragment"
        android:name="com.puntogris.blint.feature_store.presentation.client.manage.ManageClientsFragment" >
        <action
            android:id="@+id/action_manageClientsFragment_to_clientFragment"
            app:destination="@id/clientFragment" />
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="com.puntogris.blint.feature_store.presentation.product.details.ProductFragment"
        android:label="@string/product_label" >
        <argument
            android:name="productWithDetails"
            app:argType="com.puntogris.blint.feature_store.domain.model.product.ProductWithDetails"/>
        <action
            android:id="@+id/action_productFragment_to_editProductFragment"
            app:destination="@id/editProductFragment" />
        <action
            android:id="@+id/action_productFragment_to_recordInfoBottomSheet"
            app:destination="@id/recordInfoBottomSheet" />
        <action
            android:id="@+id/action_productFragment_to_supplierFragment"
            app:destination="@id/supplierFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.puntogris.blint.feature_auth.presentation.LoginFragment"
        android:label="" >
        <action
            android:id="@+id/action_loginFragment_to_syncAccountFragment"
            app:destination="@id/syncAccountFragment" />
    </fragment>
    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.puntogris.blint.feature_store.presentation.calendar.CalendarFragment"
        android:label="@string/calendar_label" >
        <action
            android:id="@+id/action_calendarFragment_to_eventInfoBottomSheet"
            app:destination="@id/eventInfoBottomSheet" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.puntogris.blint.feature_store.presentation.about.AboutFragment"
        android:label="@string/about_us_label" />
    <fragment
        android:id="@+id/editProductFragment"
        android:name="com.puntogris.blint.feature_store.presentation.product.create_edit.EditProductFragment"
        android:label="@string/product_label" >
        <argument
            android:name="productWithDetails"
            app:argType="com.puntogris.blint.feature_store.domain.model.product.ProductWithDetails" />
        <action
            android:id="@+id/action_editProductFragment_to_scannerFragment"
            app:destination="@id/scannerFragment" />
        <action
            android:id="@+id/action_editProductFragment_to_productCategoryFragment"
            app:destination="@id/productCategoryFragment" />
        <action
            android:id="@+id/action_editProductFragment_to_productSupplierFragment"
            app:destination="@id/productSupplierFragment" />
    </fragment>
    <fragment
        android:id="@+id/editClientFragment"
        android:name="com.puntogris.blint.feature_store.presentation.client.create_edit.EditClientFragment"
        android:label="@string/client_label" >
        <argument
            android:name="client"
            app:argType="com.puntogris.blint.feature_store.domain.model.Client"
            android:defaultValue="@null"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/editSupplierFragment"
        android:name="com.puntogris.blint.feature_store.presentation.supplier.create_edit.EditSupplierFragment"
        android:label="@string/supplier_label" >
        <argument
            android:name="supplier"
            app:argType="com.puntogris.blint.feature_store.domain.model.Supplier"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <dialog
        android:id="@+id/scannerResultDialog"
        android:name="com.puntogris.blint.feature_store.presentation.scanner.ScannerResultBottomSheet"
        android:label="" >
        <argument
            android:name="barcode"
            app:argType="string" />
        <action
            android:id="@+id/action_scannerResultDialog_to_editProductFragment"
            app:destination="@id/editProductFragment" />
        <action
            android:id="@+id/action_scannerResultDialog_to_productFragment"
            app:destination="@id/productFragment" />
    </dialog>
    <fragment
        android:id="@+id/accountPreferences"
        android:name="com.puntogris.blint.feature_store.presentation.settings.AccountPreferences"
        android:label="@string/my_account_pref" />
    <fragment
        android:id="@+id/backUpPreferences"
        android:name="com.puntogris.blint.feature_store.presentation.settings.BackupPreferences"
        android:label="@string/backup_pref" />
    <fragment
        android:id="@+id/userAccountFragment"
        android:name="com.puntogris.blint.feature_store.presentation.account.UserAccountFragment"
        android:label="@string/my_information_pref" />
    <fragment
        android:id="@+id/restoreBackupFragment"
        android:name="com.puntogris.blint.feature_store.presentation.backup.RestoreBackupFragment"
        android:label="@string/restore_backup_label" />
    <fragment
        android:id="@+id/createBackupFragment"
        android:name="com.puntogris.blint.feature_store.presentation.backup.CreateBackupFragment"
        android:label="@string/backup_label" />
    <fragment
        android:id="@+id/manageOrdersFragment"
        android:name="com.puntogris.blint.feature_store.presentation.orders.manage.ManageOrdersFragment"
        android:label="@string/orders_label" >
        <action
            android:id="@+id/action_manageOrdersFragment_to_recordInfoBottomSheet"
            app:destination="@id/recordInfoBottomSheet" />
        <action
            android:id="@+id/action_manageOrdersFragment_to_OrderInfoBottomSheet"
            app:destination="@id/orderInfoBottomSheet" />
    </fragment>
    <dialog
        android:id="@+id/recordInfoBottomSheet"
        android:name="com.puntogris.blint.feature_store.presentation.orders.details.RecordInfoBottomSheet"
        android:label="RecordInfoBottomSheet" >
        <argument
            android:name="record"
            app:argType="com.puntogris.blint.feature_store.domain.model.order.Record" />
        <action
            android:id="@+id/action_recordInfoBottomSheet_to_supplierFragment"
            app:destination="@id/supplierFragment" />
        <action
            android:id="@+id/action_recordInfoBottomSheet_to_clientFragment"
            app:destination="@id/clientFragment" />
        <action
            android:id="@+id/action_recordInfoBottomSheet_to_orderFragment"
            app:destination="@id/orderFragment" />
    </dialog>
    <fragment
        android:id="@+id/createEventFragment"
        android:name="com.puntogris.blint.feature_store.presentation.calendar.CreateEventFragment"
        android:label="@string/new_event_label" />
    <dialog
        android:id="@+id/eventInfoBottomSheet"
        android:name="com.puntogris.blint.feature_store.presentation.calendar.EventInfoBottomSheet"
        android:label="EventInfoBottomSheet" >
        <argument
            android:name="event"
            app:argType="com.puntogris.blint.feature_store.domain.model.Event" />
        <argument
            android:name="position"
            app:argType="integer"
            android:defaultValue="-1" />
    </dialog>
    <fragment
        android:id="@+id/manageCategoriesFragment"
        android:name="com.puntogris.blint.feature_store.presentation.categories.ManageCategoriesFragment"
        android:label="@string/categories_label" />
    <fragment
        android:id="@+id/syncAccountFragment"
        android:name="com.puntogris.blint.feature_store.presentation.sync.SyncAccountFragment"
        android:label="" >
        <argument
            android:name="authUser"
            app:argType="com.puntogris.blint.feature_store.domain.model.AuthUser"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/manageBusinessFragment"
        android:name="com.puntogris.blint.feature_store.presentation.business.manage.ManageBusinessFragment"
        android:label="@string/my_businesses_pref" >
        <action
            android:id="@+id/action_manageBusinessFragment_to_businessFragment"
            app:destination="@id/businessFragment" />
    </fragment>
    <fragment
        android:id="@+id/businessFragment"
        android:name="com.puntogris.blint.feature_store.presentation.business.BusinessFragment"
        android:label="@string/my_business_label" >
        <argument
            android:name="business"
            app:argType="com.puntogris.blint.feature_store.domain.model.Business" />
        <action
            android:id="@+id/action_businessFragment_to_deleteBusinessFragment"
            app:destination="@id/deleteBusinessFragment" />
    </fragment>

    <fragment
        android:id="@+id/deleteBusinessFragment"
        android:name="com.puntogris.blint.feature_store.presentation.business.DeleteBusinessFragment"
        android:label="@string/delete_business" >
        <argument
            android:name="business"
            app:argType="com.puntogris.blint.feature_store.domain.model.Business" />
    </fragment>

    <fragment
        android:id="@+id/newUserFragment"
        android:name="com.puntogris.blint.feature_store.presentation.main.NewUserFragment"
        android:label="@string/app_name" />
    <navigation android:id="@+id/detailedOrderGraphNav"
        app:startDestination="@id/orderTypeFragment">
        <argument
            android:name="product"
            app:argType="com.puntogris.blint.feature_store.domain.model.product.Product"
            app:nullable="true" />
        <fragment
            android:id="@+id/orderTypeFragment"
            android:name="com.puntogris.blint.feature_store.presentation.orders.detailed_order.OrderTypeFragment"
            android:label="">
            <action
                android:id="@+id/action_orderTypeFragment_to_addOrderClientSupplierBottomSheet"
                app:destination="@id/addOrderClientSupplierBottomSheet" />
            <action
                android:id="@+id/action_orderTypeFragment_to_createRecordFragment"
                app:destination="@id/createOrderFragment" />
        </fragment>
        <fragment
            android:id="@+id/reviewRecordFragment"
            android:name="com.puntogris.blint.feature_store.presentation.orders.detailed_order.ReviewRecordFragment"
            android:label="@string/review_order_label">
            <action
                android:id="@+id/action_reviewRecordFragment_to_publishOrderFragment"
                app:destination="@id/publishOrderFragment"
                app:popUpTo="@id/detailedOrderGraphNav"
                app:popUpToInclusive="false" />
        </fragment>
        <dialog
            android:id="@+id/addOrderClientSupplierBottomSheet"
            android:name="com.puntogris.blint.feature_store.presentation.orders.detailed_order.OrderTraderBottomSheet"
            android:label="AddOrderClientSupplierBottomSheet">
            <argument
                android:name="orderType"
                app:argType="string" />
            <action
                android:id="@+id/action_addOrderClientSupplierBottomSheet_to_createRecordFragment"
                app:destination="@id/createOrderFragment" />
        </dialog>
        <fragment
            android:id="@+id/publishOrderFragment"
            android:name="com.puntogris.blint.feature_store.presentation.orders.detailed_order.PublishOrderFragment"
            android:label="@string/publish_order_label" />
        <fragment
            android:id="@+id/createOrderFragment"
            android:name="com.puntogris.blint.feature_store.presentation.orders.detailed_order.OrderProductsFragment"
            android:label="@string/new_order_label">
            <argument
                android:name="productID"
                android:defaultValue="0"
                app:argType="string" />
            <action
                android:id="@+id/action_createRecordFragment_to_reviewRecordFragment"
                app:destination="@id/reviewRecordFragment" />
        </fragment>
        <action
            android:id="@+id/action_global_scannerFragment"
            app:destination="@id/scannerFragment" />
    </navigation>
    <dialog
        android:id="@+id/orderInfoBottomSheet"
        android:name="com.puntogris.blint.feature_store.presentation.orders.details.OrderInfoBottomSheet"
        android:label="OrderInfoBottomSheet" >
        <argument
            android:name="order"
            app:argType="com.puntogris.blint.feature_store.domain.model.order.OrderWithRecords" />
        <action
            android:id="@+id/action_orderInfoBottomSheet_to_supplierFragment"
            app:destination="@id/supplierFragment" />
        <action
            android:id="@+id/action_orderInfoBottomSheet_to_orderFragment"
            app:destination="@id/orderFragment" />
    </dialog>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.puntogris.blint.feature_store.presentation.orders.details.OrderFragment"
        android:label="@string/order_label" >
        <argument
            android:name="orderId"
            app:argType="string"
            android:defaultValue="0" />
        <argument
            android:name="order"
            app:argType="com.puntogris.blint.feature_store.domain.model.order.OrderWithRecords"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/manageDebtFragment"
        android:name="com.puntogris.blint.feature_store.presentation.debt.manage.ManageDebtFragment"
        android:label="@string/debts_label" >
        <action
            android:id="@+id/action_manageDebtFragment_to_showDebtsFragment"
            app:destination="@id/showDebtsFragment" />
    </fragment>
    <fragment
        android:id="@+id/debtStatusFragment"
        android:name="com.puntogris.blint.feature_store.presentation.debt.debt_status.DebtStatusFragment"
        android:label="@string/debt_label" >
        <action
            android:id="@+id/action_debtStatusFragment_to_modifyDebtFragment"
            app:destination="@id/modifyDebtFragment" />
        <argument
            android:name="trader"
            app:argType="com.puntogris.blint.feature_store.domain.model.Trader" />
    </fragment>
    <fragment
        android:id="@+id/modifyDebtFragment"
        android:name="com.puntogris.blint.feature_store.presentation.debt.ModifyDebtFragment"
        android:label="@string/update_debt_label" >
        <argument
            android:name="trader"
            app:argType="com.puntogris.blint.feature_store.domain.model.Trader" />
    </fragment>
    <fragment
        android:id="@+id/showDebtsFragment"
        android:name="com.puntogris.blint.feature_store.presentation.debt.trader_debts.ShowDebtsFragment"
        android:label="@string/debts_label" >
        <argument
            android:name="debtType"
            app:argType="integer" />
    </fragment>

    <action
        android:id="@+id/action_global_newOrderGraphNav"
        app:destination="@id/detailedOrderGraphNav">
        <argument
            app:argType="com.puntogris.blint.feature_store.domain.model.product.Product"
            android:name="product"
            app:nullable="true"
            android:defaultValue="@null" />
    </action>
    <dialog
        android:id="@+id/simpleOrderBottomSheet"
        android:name="com.puntogris.blint.feature_store.presentation.orders.simple_order.SimpleOrderDialog"
        android:label="" >
        <argument
            android:name="product"
            app:argType="com.puntogris.blint.feature_store.domain.model.product.Product" />
    </dialog>
    <action
        android:id="@+id/action_global_simpleOrderBottomSheet"
        app:destination="@id/simpleOrderBottomSheet" />
    <fragment
        android:id="@+id/productCategoryFragment"
        android:name="com.puntogris.blint.feature_store.presentation.product.categories.ProductCategoryFragment"
        android:label="ProductCategoryFragment" >
        <argument
            android:name="categories"
            app:nullable="true"
            app:argType="com.puntogris.blint.feature_store.domain.model.Category[]"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/productSupplierFragment"
        android:name="com.puntogris.blint.feature_store.presentation.product.suppliers.ProductSupplierFragment"
        android:label="ProductSupplierFragment" >
        <argument
            android:name="suppliers"
            app:argType="com.puntogris.blint.feature_store.domain.model.Supplier[]"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/sendTicketFragment"
        android:name="com.puntogris.blint.feature_store.presentation.settings.SendTicketFragment"
        android:label="@string/send_ticket_label" />
    <navigation android:id="@+id/reportsNavGraph"
        app:startDestination="@id/reportsFragment">
        <fragment
            android:id="@+id/generateReportFragment"
            android:name="com.puntogris.blint.feature_store.presentation.reports.GenerateReportFragment"
            android:label="@string/generate_report_label">
            <argument
                android:name="reportCode"
                app:argType="integer" />
            <argument
                android:name="timeCode"
                android:defaultValue=" "
                app:argType="string" />
            <argument
                android:name="startTime"
                android:defaultValue="0L"
                app:argType="long" />
            <argument
                android:name="endTime"
                app:argType="long"
                android:defaultValue="0L" />
        </fragment>
        <fragment
            android:id="@+id/reportsFragment"
            android:name="com.puntogris.blint.feature_store.presentation.reports.ReportsFragment"
            android:label="@string/reports_label">
            <action
                android:id="@+id/action_reportsFragment_to_generateReportFragment"
                app:destination="@id/generateReportFragment" />
        </fragment>
    </navigation>
</navigation>